<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:telerik="http://schemas.telerik.com/2022/xaml/maui"
             xmlns:local="clr-namespace:SDKBrowserMaui.Examples.DataFormControl.EditorsCategory.DataTypeEditorsExample"
             x:Class="SDKBrowserMaui.Examples.DataFormControl.EditorsCategory.DataTypeEditorsExample.DataTypeEditors">
    <Grid>
        <!-- >> dataform-datatype-editors -->
        <telerik:RadDataForm x:Name="dataForm" 
                             ValidationMode="LostFocus">
            <telerik:RadDataForm.LayoutDefinition>
                <telerik:DataFormGridLayout ColumnCount="{OnIdiom Phone='2', Default='3'}"
                                            ColumnSpacing="10"/>
            </telerik:RadDataForm.LayoutDefinition>
            <telerik:RadDataForm.BindingContext>
                <local:DataTypeEditorsModel/>
            </telerik:RadDataForm.BindingContext>
        </telerik:RadDataForm>
        <!-- << dataform-datatype-editors -->
    </Grid>
</ContentView>
