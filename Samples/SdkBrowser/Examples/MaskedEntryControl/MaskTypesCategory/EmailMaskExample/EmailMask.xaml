<?xml version="1.0" encoding="utf-8" ?>
<telerik:RadContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                        xmlns:telerik="http://schemas.telerik.com/2022/xaml/maui"
                        x:Class="SDKBrowserMaui.Examples.MaskedEntryControl.MaskTypesCategory.EmailMaskExample.EmailMask"
                        Margin="5">
    <telerik:RadContentView.Content>
        <ScrollView>
            <VerticalStackLayout>

                <Label Text="Default Email Mask:" Margin="0, 10, 0, 0" />
                <!-- >> emailmaskedentry-xaml -->
                <telerik:RadEmailMaskedEntry AutomationId="emailMask"/>
                <!-- << emailmaskedentry-xaml -->
                
                <Label Text="Email Mask with changed placeholder:" Margin="0, 10, 0, 0" />
                <!-- >> emailmaskedentry-placeholder-xaml -->
                <telerik:RadEmailMaskedEntry Placeholder="your_email@gmail.com" AutomationId="emailMaskChangedPlaceholder"/>
                <!-- << emailmaskedentry-placeholder-xaml -->
                
            </VerticalStackLayout>
        </ScrollView>
    </telerik:RadContentView.Content>
</telerik:RadContentView>