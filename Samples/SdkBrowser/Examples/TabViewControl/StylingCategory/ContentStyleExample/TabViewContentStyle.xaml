<?xml version="1.0" encoding="utf-8" ?>
<ContentView x:Class="SDKBrowserMaui.Examples.TabViewControl.StylingCategory.ContentStyleExample.TabViewContentStyle"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:telerik="http://schemas.telerik.com/2022/xaml/maui"
>
    <!--  >> tabview-styling-contentstyle  -->
    <telerik:RadTabView x:Name="tabView"
                        HeaderSpacing="10">
        <telerik:RadTabView.ContentStyle>
            <Style TargetType="telerik:TabViewContent">
                <Setter Property="BackgroundColor" Value="#EBECF0" />
                <Setter Property="BorderColor" Value="#623FEA" />
                <Setter Property="BorderThickness" Value="1" />
                <Setter Property="CornerRadius" Value="10"/>
            </Style>
        </telerik:RadTabView.ContentStyle>
        <telerik:TabViewItem HeaderText="Home">
            <Label Margin="10" Text="This is the content of the Home tab" />
        </telerik:TabViewItem>
        <telerik:TabViewItem HeaderText="Folder">
            <Label Margin="10" Text="This is the content of the Folder tab" />
        </telerik:TabViewItem>
        <telerik:TabViewItem HeaderText="View">
            <Label Margin="10" Text="This is the content of the View tab" />
        </telerik:TabViewItem>
    </telerik:RadTabView>
    <!--  << tabview-styling-contentstyle  -->
</ContentView>