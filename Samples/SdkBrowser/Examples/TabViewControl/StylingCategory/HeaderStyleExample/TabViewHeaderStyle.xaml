<?xml version="1.0" encoding="utf-8" ?>
<ContentView x:Class="SDKBrowserMaui.Examples.TabViewControl.StylingCategory.HeaderStyleExample.TabViewHeaderStyle"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"             
             xmlns:telerik="http://schemas.telerik.com/2022/xaml/maui"
>
    <!--  >> tabview-styling-headerstyle  -->
    <telerik:RadTabView x:Name="tabView">
        <telerik:RadTabView.HeaderStyle>
            <Style TargetType="telerik:TabViewHeader">
                <Setter Property="BackgroundColor" Value="#EBECF0" />
                <Setter Property="BorderColor" Value="#e05194" />
            </Style>
        </telerik:RadTabView.HeaderStyle>
        <telerik:TabViewItem HeaderText="Home">
            <Label Margin="10" Text="This is the content of the Home tab" />
        </telerik:TabViewItem>
        <telerik:TabViewItem HeaderText="Folder">
            <Label Margin="10" Text="This is the content of the Folder tab" />
        </telerik:TabViewItem>
        <telerik:TabViewItem HeaderText="View">
            <Label Margin="10" Text="This is the content of the View tab" />
        </telerik:TabViewItem>
    </telerik:RadTabView>
    <!--  << tabview-styling-headerstyle  -->
</ContentView>