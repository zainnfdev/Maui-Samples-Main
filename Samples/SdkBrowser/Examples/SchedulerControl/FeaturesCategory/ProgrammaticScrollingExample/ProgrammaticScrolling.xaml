<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:telerik="http://schemas.telerik.com/2022/xaml/maui"
             x:Class="SDKBrowserMaui.Examples.SchedulerControl.FeaturesCategory.ProgrammaticScrollingExample.ProgrammaticScrolling">
    <Grid RowDefinitions="Auto, *"
          RowSpacing="20">
        <Button Text="Scroll to 10AM" Clicked="ScrollToTime" />
        <!-- >> scheduler-programmatic-scrolling -->
        <telerik:RadScheduler x:Name="scheduler" Grid.Row="1">
            <telerik:RadScheduler.ViewDefinitions>
                <telerik:WeekViewDefinition />
                <telerik:MultidayViewDefinition VisibleDays="3" Title="3 Day" />
                <telerik:DayViewDefinition />
            </telerik:RadScheduler.ViewDefinitions>
        </telerik:RadScheduler>
        <!-- << scheduler-programmatic-scrolling -->
    </Grid>
</ContentView>