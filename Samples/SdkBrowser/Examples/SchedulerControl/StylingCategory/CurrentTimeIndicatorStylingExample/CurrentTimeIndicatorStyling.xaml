<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:telerik="http://schemas.telerik.com/2022/xaml/maui"
             x:Class="SDKBrowserMaui.Examples.SchedulerControl.StylingCategory.CurrentTimeIndicatorStylingExample.CurrentTimeIndicatorStyling">
    <ContentView.Resources>
        <ResourceDictionary>
            <!-- >> scheduler-currenttimeindicator-styling -->
            <Style TargetType="telerik:SchedulerCurrentTimeIndicator">
                <Setter Property="Color" Value="#830183" />
                <Setter Property="LineThickness" Value="3" />
            </Style>
            <!-- << scheduler-currenttimeindicator-styling -->
        </ResourceDictionary>
    </ContentView.Resources>
    <Grid>
        <!-- >> scheduler-currenttimeindicator-styling-definition -->
        <telerik:RadScheduler x:Name="scheduler" ActiveViewDefinitionIndex="2">
            <telerik:RadScheduler.ViewDefinitions>
                <telerik:DayViewDefinition />
                <telerik:MultidayViewDefinition VisibleDays="3" Title="3 Day" />
                <telerik:WeekViewDefinition />
            </telerik:RadScheduler.ViewDefinitions>
        </telerik:RadScheduler>
        <!-- << scheduler-currenttimeindicator-styling-definition -->
    </Grid>
</ContentView>
