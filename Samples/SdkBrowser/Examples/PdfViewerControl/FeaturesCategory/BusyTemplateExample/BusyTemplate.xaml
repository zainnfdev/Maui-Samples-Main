<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:telerik="http://schemas.telerik.com/2022/xaml/maui"
             x:Class="SDKBrowserMaui.Examples.PdfViewerControl.FeaturesCategory.BusyTemplateExample.BusyTemplate">
    <!-- >> pdfviewer-busy-indicator-template-xaml -->
    <telerik:RadPdfViewer x:Name="pdfViewer">
        <telerik:RadPdfViewer.BusyIndicatorTemplate>
            <DataTemplate>
                <telerik:RadBusyIndicator AnimationType="Animation10"
                                          AnimationContentHeightRequest="100"
                                          AnimationContentWidthRequest="100"
                                          IsBusy="True" />
            </DataTemplate>
        </telerik:RadPdfViewer.BusyIndicatorTemplate>
    </telerik:RadPdfViewer>
    <!-- << pdfviewer-busy-indicator-template-xaml -->
</ContentView>
