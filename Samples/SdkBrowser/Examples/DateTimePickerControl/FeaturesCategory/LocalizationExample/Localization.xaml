                        xmlns:telerik="http://schemas.telerik.com/2022/xaml/maui"
                        x:Class="SDKBrowserMaui.Examples.DateTimePickerControl.FeaturesCategory.LocalizationExample.Localization">
    <telerik:RadContentView.Content>
        <VerticalStackLayout WidthRequest="300" HorizontalOptions="Center">
            <!-- >> datetime-picker-localization-xaml -->
            <telerik:RadDateTimePicker>
                <telerik:RadDateTimePicker.PopupSettings>
                    <telerik:PickerPopupSettings IsHeaderVisible="True"/>
                </telerik:RadDateTimePicker.PopupSettings>
            </telerik:RadDateTimePicker>
            <!-- << datetime-picker-localization-xaml -->
        </VerticalStackLayout>
    </telerik:RadContentView.Content>
</telerik:RadContentView>